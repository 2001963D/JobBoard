@inject IModalService modal

<EditForm Model="@enquiry" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>First Name: </label>
            <div>
                <InputText @bind-Value="enquiry.FirstName" class="form-control" />
                <ValidationMessage For="@(() => enquiry.FirstName)" />
            </div>
        </div>
        <div class="form-group">
            <label>Last Name: </label>
            <div>
                <InputText @bind-Value="enquiry.LastName" class="form-control" />
                <ValidationMessage For="@(() => enquiry.LastName)" />
            </div>
        </div>
        <div class="form-group">
            <label>Contact: </label>
            <div>
                <InputText @bind-Value="enquiry.Contact" class="form-control" />
                <ValidationMessage For="@(() => enquiry.Contact)" />
            </div>
        </div>
        <div class="form-group">
            <label>Email: </label>
            <div>
                <InputText @bind-Value="enquiry.Email" class="form-control" />
                <ValidationMessage For="@(() => enquiry.Email)" />
            </div>
        </div>
        <div class="form-group">
            <label>Details: </label>
            <div>
                <InputText @bind-Value="enquiry.Details" class="form-control" />
                <ValidationMessage For="@(() => enquiry.Details)" />
            </div>
        </div>
        </fieldset>
        @if (!Disabled)
        {
        <button @onclick="@(()=>modal.Show<Thankyou>(""))" class="btn btn-success btn-block">Create Enquiry</button>
        }
        <BackToList Target="enquirys" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Enquiry enquiry { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
